            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $("#db").click();
            });
            function addtab(obj, url) {
                var addtitle = $(obj).linkbutton("options").text;
                var exi = $('#tt').tabs('exists', addtitle);
                var content = '<iframe scrolling="auto" frameborder="no" border="0" marginwidth="0" marginheight="0" scrolling="no" allowtransparency="yes" src="' + url + '" style="width:100%;height:100%;"></iframe>';
                if (!exi)
                    $('#tt').tabs('add', {
                        title: addtitle,
                        content: content,
                        closable: true
                    });
                else $('#tt').tabs('select', addtitle);
            }
