@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>登录页</title>
    <script src="../JS/jquery-easyui-1.7.0/jquery.min.js" type="text/javascript">
    </script>
</head>
<body>
用户名：<input type="text" id="Username" /></br>
密码：<input type="password" id="Password" /></br>
<input type="button" value="登录" onclick="Login()">
<script type="text/javascript">
    var Username;
    var Password;
    function Login() {
        Username = $("#Username").val();
        Password = $("#Password").val();
        $.ajax({
            url: "/Login/Checklogin",
            type: "get",
            data: {
                "Username": Username,
                "Password": Password
            },
            success: function (data) {
                if (data == 1) {
                    alert("登录成功！");
                    window.location.href = "../Menu/Menu";
                }
                else alert("用户名或密码错误！");
            },
            error: function () {
                alert("登录失败！");
            }
        });
    }
</script>
</body>
</html>